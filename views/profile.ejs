<!doctype html>
<html>
<head>
    <title>Coffee Order Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> We Node what you want</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="welcome">
                <h3><span class="fa fa-user"></span> Welcome Barista <%= user.local.email %>!</h3>

                <% if (user.local.email) { %>
                    <p>Clocked in at: 8:00am</p>
                    <p>Shift ends in: 4 hours</p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3 id="qTitle">Queue</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span id="makeBlack"><%= messages[i].msg %></span>
              <span><%= messages[i].customer %></span>
              <span id="makeGreen"><%= messages[i].thumbUp %></span>
              <span><%= messages[i].size %></span>
              <span><%= messages[i].cream %></span>
              <span><%= messages[i].milk %></span>
             <span><%= messages[i].sugar %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
</div>
          <h2 id=formHead>Add a new order</h2>
          <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text"placeholder="message" name="msg" list="coffeeList">
            <fieldset>
    <legend>Coffee - Small / Medium / Large</legend>
    <label for="">Size </label>
    <select class="Size" name="size">
            <option  value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
        </select>


    <label for="cream">Cream</label>
    <input id="cream" name="cream" class="oneCream" value="cream" type="radio">
    <label for="milk">Milk</label>
    <input id="milk" name="milk" class="twoCream" value= "milk"type="radio">
    <label for="sugar">Sugar</label>
    <input id="sugar" name="sugar" class="oneSugar" value="sugar" type="radio">

  </fieldset>
              <datalist id="coffeeList">
                <opton value="Pumpkin Spice">
                <option value="Sweet Chai Latte">
                <option value="Iced Latte Machiatto">
                <option value="Green Tea Latte">
                <option value="Double Mocha Macchiato">
              </datalist>
            <input type="text" placeholder="customer" name="customer">
            <button type="submit">Submit</button>
          </form>
          </div>
          <% } %>

<script src="main.js"></script>

</body>
</html>
